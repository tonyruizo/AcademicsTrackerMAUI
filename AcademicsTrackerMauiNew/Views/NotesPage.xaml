<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AcademicsTrackerMauiNew.Views.NotesPage"
             Title="Course Notes">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label x:Name="CourseTitleLabel" FontSize="20" />
            <Label Margin="0, 20, 0, 0">Notes:</Label>
            <Editor x:Name="NotesEditor" HeightRequest="200" 
                    BackgroundColor="#f2e9fd" />
            <Button Text="Save Notes" Clicked="OnSaveClicked" Margin="0, 20, 0, 0"/>
            <Button Text="Share Notes" Clicked="OnShareClicked" />
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>